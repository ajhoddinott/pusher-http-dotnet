<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net4.5;netstandard1.6;netstandard2.0</TargetFrameworks>
    <AssemblyVersion>5.0.0.0</AssemblyVersion>
    <FileVersion>5.0.0.0</FileVersion>
    <Description>Pusher .NET library for interacting with the HTTP API</Description>
    <Company>Pusher</Company>
    <Version>5.0.0</Version>
    <Product>pusher-http-dotnet</Product>
    <Authors>Pusher, Phil Legetter, John McLoughlin</Authors>
    <Copyright>Copyright © 2018</Copyright>
    <RepositoryType>GIT</RepositoryType>
    <RepositoryUrl>https://github.com/pusher/pusher-http-dotnet</RepositoryUrl>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="11.0.2" />
    <PackageReference Include="System.Net.Http" Version="4.3.3" />
  </ItemGroup>

</Project>
